<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mappers.replyMapper">

	<!-- 댓글 조회 -->
	<select id="readReply" resultType="com.test.domain.ReplyVO">
		select rno, content, writer, regDate
		from myreply where bno = #{bno}
	</select>
	
	<!-- 특정 댓글 조회 -->
	<select id="readReplySelect" resultType="com.test.domain.ReplyVO">
	  select bno,rno,content,writer,regDate from myreply 
	  where rno=#{rno}
	</select>
	
	<!-- 댓글 작성 -->
	<select id="writeReply">
	 insert into myreply(bno,content,writer)
	 values(#{bno},#{content},#{writer})
	</select>
	
	<!-- 댓글 수정 -->
	<update id="updateReply">
	UPDATE myreply SET content=#{content} WHERE rno=#{rno}
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="deleteReply">
	delete from myreply where rno =#{rno}
	</delete>
	
	
	

</mapper>